// Opciones del mapa
// Imagen satelital al fondo.
Map.setOptions('SATELLITE');

// Imagen.
var composite = ee.Image('projects/pc300-samz-sinchi/assets/mosaico');

// Centrar al mapa.
Map.centerObject(composite, 10);


// Parametros de visualización
var compositeVis = {"bands":["red","green","blue"],"min":1100,"max":1794,"gamma":1.8};

// Agregar al mapa.
Map.addLayer(composite, compositeVis, 'Color natural');


// Hacer lo mismo con las otras capas/bandas para visualización.
// ........

// Create a title.
var title = ui.Label('Mosaicos Amazonia Colombiana', {
  stretch: 'horizontal',
  textAlign: 'center',
  fontWeight: 'bold',
  fontSize: '24px'
});

Map.add(title);