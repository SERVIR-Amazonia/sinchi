//// Classiffy with Prmitives

//Funcion para extraer los valores de entrenamiento y validacion de la imagen de covariables
exports.PreparePts = function(S1_training, S1_testing, image_covariates) {
    // Funci贸n interna para convertir la propiedad 'nivel_1' de entero a string
    var convertNivel1ToString = function(feature) {
        var nivel1String = ee.Number(feature.get('nivel_1')).format();
        return feature.set('nivel_1', nivel1String);
    };

    // Aplicar la funci贸n convertNivel1ToString a cada Feature en S1_training y S1_testing
    var trainingDataUpdated = S1_training.map(convertNivel1ToString);
    var testingDataUpdated = S1_testing.map(convertNivel1ToString);

    // Obtener los valores de las covariables de imagen para cada punto
    var covariatesForTraining = image_covariates.reduceRegions({
        collection: trainingDataUpdated,
        reducer: ee.Reducer.first(),
        scale: 20
    });

    var covariatesForTesting = image_covariates.reduceRegions({
        collection: testingDataUpdated,
        reducer: ee.Reducer.first(),
        scale: 20
    });

    // Unir los nuevos atributos a las FeatureCollections originales
    trainingDataUpdated = joinFeatureCollections(trainingDataUpdated, covariatesForTraining);
    testingDataUpdated = joinFeatureCollections(testingDataUpdated, covariatesForTesting);

    // Funci贸n para unir los atributos de dos FeatureCollections
    function joinFeatureCollections(primary, secondary) {
        return ee.FeatureCollection(primary.map(function(feature) {
            return feature.copyProperties(secondary.filter(ee.Filter.equals('system:index', feature.get('system:index'))), null, null);
        }));
    }

    // Retornar ambos datasets actualizados
    return {trainingDataUpdated: trainingDataUpdated, testingDataUpdated: testingDataUpdated};
};




