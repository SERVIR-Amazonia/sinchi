print("S1_testing",S1_testing)

var addRasterValueToFeature = function(feature) {
    var sampledCollection = classifiedImage.sample({
        region: feature.geometry(),
        scale: 30 // Adjust the scale as necessary
    });

    // Use ee.Algorithms.If to handle the conditional logic on the server-side
    return ee.Feature(ee.Algorithms.If(
        sampledCollection.size(),
        feature.set('raster_value', ee.Feature(sampledCollection.first()).get('classification')), // Replace 'classification' with the correct band name
        feature.set('raster_value', 'No data')
    ));
};

var testingPointsWithRasterValues = S1_testing.map(addRasterValueToFeature);
print("testingPointsWithRasterValues",testingPointsWithRasterValues);

//Confusion Matrix


//Filter NA Values
//Since some classified values have NA values, you'll need to filter these out. This script assumes that NA values are represented as null.

testingPointsWithRasterValues = testingPointsWithRasterValues.filter(ee.Filter.notNull(['raster_value']));
//Step 3: Create a Confusion Matrix
//compare the nivel_1 (actual values) with raster_value (classified values).

var mappedConfusion = pint.map(function(feature) {
  var actual = feature.get('nivel_1');
  var predicted = feature.get('raster_value');
  return ee.Feature(null, {'actual': actual, 'predicted': predicted});
});

var confusionMatrix = ee.ConfusionMatrix(
  mappedConfusion.reduceColumns({
    reducer: ee.Reducer.confusionMatrix(),
    selectors: ['actual', 'predicted']
  }).get('confusionMatrix')
);


var accuracy = confusionMatrix.accuracy();
var commissionErrors = confusionMatrix.consumersAccuracy();
var omissionErrors = confusionMatrix.producersAccuracy();
print('Confusion Matrix:', confusionMatrix);
print('Overall Accuracy:', accuracy);
print('Commission Errors:', commissionErrors);
print('Omission Errors:', omissionErrors);


